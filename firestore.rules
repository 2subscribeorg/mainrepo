rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Subscriptions - Users can only access their own
    match /subscriptions/{subscriptionId} {
      // List/Get: Allow authenticated users to query their own subscriptions
      allow list: if isAuthenticated();
      allow get: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Create: Check new document's userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Update: Check both old and new userId
      allow update: if isAuthenticated() && 
                       isOwner(resource.data.userId) &&
                       request.resource.data.userId == request.auth.uid;
      
      // Delete: Check existing document's userId
      allow delete: if isAuthenticated() && 
                       isOwner(resource.data.userId);
    }
    
    // Categories - Users can only access their own
    match /categories/{categoryId} {
      // List/Get: Allow authenticated users to query their own categories
      allow list: if isAuthenticated();
      allow get: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Create: Check new document's userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Update: Check both old and new userId
      allow update: if isAuthenticated() && 
                       isOwner(resource.data.userId) &&
                       request.resource.data.userId == request.auth.uid;
      
      // Delete: Check existing document's userId
      allow delete: if isAuthenticated() && 
                       isOwner(resource.data.userId);
    }
    
    // Budgets - Document ID is the userId
    match /budgets/{budgetId} {
      allow read: if isAuthenticated() && 
                     request.auth.uid == budgetId;
      
      allow create: if isAuthenticated() && 
                       request.auth.uid == budgetId;
      
      allow update: if isAuthenticated() && 
                       request.auth.uid == budgetId;
      
      allow delete: if isAuthenticated() && 
                       request.auth.uid == budgetId;
    }
    
    // Transactions - Users can only access their own
    match /transactions/{transactionId} {
      // List/Get: Allow authenticated users to query their own transactions
      allow list: if isAuthenticated();
      allow get: if isAuthenticated() && isOwner(resource.data.userId);
      
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      allow update: if isAuthenticated() && 
                       isOwner(resource.data.userId) &&
                       request.resource.data.userId == request.auth.uid;
      
      allow delete: if isAuthenticated() && 
                       isOwner(resource.data.userId);
    }
    
    // Merchant Rules - Users can only access their own
    match /merchantRules/{ruleId} {
      // List/Get: Allow authenticated users to query their own rules
      allow list: if isAuthenticated();
      allow get: if isAuthenticated() && isOwner(resource.data.userId);
      
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      allow update: if isAuthenticated() && 
                       isOwner(resource.data.userId) &&
                       request.resource.data.userId == request.auth.uid;
      
      allow delete: if isAuthenticated() && 
                       isOwner(resource.data.userId);
    }
    
    // Subscription Feedback - Users can only access their own feedback
    match /subscription_feedback/{feedbackId} {
      // List/Get: Allow authenticated users to query their own feedback
      allow list: if isAuthenticated();
      allow get: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Create: Check new document's userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Update: Check both old and new userId
      allow update: if isAuthenticated() && 
                       isOwner(resource.data.userId) &&
                       request.resource.data.userId == request.auth.uid;
      
      // Delete: Check existing document's userId
      allow delete: if isAuthenticated() && 
                       isOwner(resource.data.userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
